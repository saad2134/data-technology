    "# Basic arithmetic operations\n",
    "q1_sales = 150000\n",
    "q2_sales = 180000\n",
    "q3_sales = 220000\n",
    "q4_sales = 195000\n",
    "\n",
    "total_sales = q1_sales + q2_sales + q3_sales + q4_sales\n",
    "average_sales = total_sales / 4\n",

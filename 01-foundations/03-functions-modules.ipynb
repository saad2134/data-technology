  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Simple business calculation functions\n",
    "def calculate_profit(revenue, costs):\n",
    "    \"\"\"Calculate profit from revenue and costs\"\"\"\n",
    "    profit = revenue - costs\n",
    "    return profit\n",
    "\n",
    "def calculate_profit_margin(revenue, costs):\n",
    "    \"\"\"Calculate profit margin as percentage\"\"\"\n",
    "    profit = revenue - costs\n",
    "    margin = (profit / revenue) * 100\n",
    "    return margin\n",
    "\n",
    "# Using the functions\n",
    "monthly_revenue = 100000\n",
    "monthly_costs = 65000\n",
    "\n",
    "profit = calculate_profit(monthly_revenue, monthly_costs)\n",
    "margin = calculate_profit_margin(monthly_revenue, monthly_costs)\n",
    "\n",
    "print(f\"Monthly Profit: ${profit:,}\")\n",
    "print(f\"Profit Margin: {margin:.1f}%\")"
   ]

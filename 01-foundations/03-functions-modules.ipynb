    "# Importing and using built-in modules\n",
    "import math\n",
    "import random\n",
    "import datetime\n",
    "from statistics import mean, median, stdev\n",
    "\n",
    "# Math module for calculations\n",
    "investment = 10000\n",
    "annual_return = 0.08  # 8%\n",
    "years = 5\n",
    "future_value = investment * math.pow(1 + annual_return, years)\n",
    "print(f\"Investment growth: ${future_value:,.2f}\")\n",
    "\n",
    "# Statistics module for data analysis\n",
    "monthly_revenues = [45000, 52000, 48000, 61000, 55000, 72000]\n",
    "print(f\"Average revenue: ${mean(monthly_revenues):,.2f}\")\n",
    "print(f\"Median revenue: ${median(monthly_revenues):,.2f}\")\n",
    "print(f\"Standard deviation: ${stdev(monthly_revenues):,.2f}\")\n",
    "\n",
    "# Datetime for business dates\n",
    "today = datetime.date.today()\n",
    "quarter_start = datetime.date(today.year, ((today.month - 1) // 3) * 3 + 1, 1)\n",
    "days_in_quarter = (today - quarter_start).days\n",
    "print(f\"\\nToday: {today}\")\n",
    "print(f\"Quarter start: {quarter_start}\")\n",
    "print(f\"Days in current quarter: {days_in_quarter}\")\n",
    "\n",
    "# Random for simulations\n",
    "print(\"\\nSales forecast simulation:\")\n",
    "forecasts = [random.randint(45000, 75000) for _ in range(5)]\n",
    "print(\"Random forecasts:\", forecasts)"

    "# Exercise 1: Create a customer scoring function\n",
    "def calculate_customer_score(purchase_history, account_age, support_tickets=0):\n",
    "    \"\"\"\n",
    "    Calculate a customer score based on various factors\n",
    "    \n",
    "    Args:\n",
    "        purchase_history (list): List of purchase amounts\n",
    "        account_age (int): Months as customer\n",
    "        support_tickets (int): Number of support tickets opened\n",
    "    \n",
    "    Returns:\n",
    "        int: Customer score (0-100)\n",
    "    \"\"\"\n",
    "    # Base score from total purchases\n",
    "    total_purchases = sum(purchase_history)\n",
    "    purchase_score = min(total_purchases / 1000 * 50, 50)  # Max 50 points\n",
    "    \n",
    "    # Loyalty score\n",
    "    loyalty_score = min(account_age * 2, 30)  # Max 30 points\n",
    "    \n",
    "    # Support penalty\n",
    "    support_penalty = support_tickets * 5\n",
    "    \n",
    "    total_score = purchase_score + loyalty_score - support_penalty\n",
    "    return max(0, min(100, int(total_score)))\n",
    "\n",
    "# Test your function\n",
    "customer_a = calculate_customer_score([150, 200, 300], 12, 2)\n",
    "customer_b = calculate_customer_score([50, 75], 3, 0)\n",
    "customer_c = calculate_customer_score([1000, 1500, 2000], 24, 1)\n",
    "\n",
    "print(f\"Customer A Score: {customer_a}\")\n",
    "print(f\"Customer B Score: {customer_b}\")\n",
    "print(f\"Customer C Score: {customer_c}\")"
   ]

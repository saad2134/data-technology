    "# Exercise 2: Create a data validation function\n",
    "def validate_sales_data(sales_record):\n",
    "    \"\"\"\n",
    "    Validate a sales record dictionary\n",
    "    \n",
    "    Args:\n",
    "        sales_record (dict): Sales data with product, revenue, units\n",
    "    \n",
    "    Returns:\n",
    "        tuple: (is_valid, errors)\n",
    "    \"\"\"\n",
    "    errors = []\n",
    "    \n",
    "    # Check required fields\n",
    "    required_fields = [\"product\", \"revenue\", \"units\"]\n",
    "    for field in required_fields:\n",
    "        if field not in sales_record:\n",
    "            errors.append(f\"Missing required field: {field}\")\n",
    "    \n",
    "    # Check data types and values\n",
    "    if \"revenue\" in sales_record and sales_record[\"revenue\"] < 0:\n",
    "        errors.append(\"Revenue cannot be negative\")\n",
    "    \n",
    "    if \"units\" in sales_record and sales_record[\"units\"] < 0:\n",
    "        errors.append(\"Units sold cannot be negative\")\n",
    "    \n",
    "    is_valid = len(errors) == 0\n",
    "    return is_valid, errors\n",
    "\n",
    "# Test validation\n",
    "test_record_1 = {\"product\": \"Laptop\", \"revenue\": 1000, \"units\": 2}\n",
    "test_record_2 = {\"product\": \"Mouse\", \"revenue\": -50, \"units\": 5}\n",
    "test_record_3 = {\"revenue\": 200, \"units\": 3}  # Missing product\n",
    "\n",
    "for i, record in enumerate([test_record_1, test_record_2, test_record_3], 1):\n",
    "    is_valid, errors = validate_sales_data(record)\n",
    "    print(f\"Record {i}: Valid={is_valid}, Errors={errors}\")"
   ]

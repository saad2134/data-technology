    "# Advanced business analysis functions\n",
    "def analyze_sales(sales_data, region=\"All\", verbose=True):\n",
    "    \"\"\"\n",
    "    Analyze sales data with optional region filter and verbose output\n",
    "    \n",
    "    Args:\n",
    "        sales_data (list): List of sales amounts\n",
    "        region (str): Region to filter by (default \"All\")\n",
    "        verbose (bool): Whether to print detailed output\n",
    "    \n",
    "    Returns:\n",
    "        dict: Sales statistics\n",
    "    \"\"\"\n",
    "    if region != \"All\":\n",
    "        # Simulate region filtering\n",
    "        filtered_sales = [s for s in sales_data if s > 0]  # Simplified filter\n",
    "    else:\n",
    "        filtered_sales = sales_data\n",
    "    \n",
    "    stats = {\n",
    "        \"total_sales\": sum(filtered_sales),\n",
    "        \"average_sales\": sum(filtered_sales) / len(filtered_sales),\n",
    "        \"max_sale\": max(filtered_sales),\n",
    "        \"min_sale\": min(filtered_sales),\n",
    "        \"sales_count\": len(filtered_sales)\n",
    "    }\n",
    "    \n",
    "    if verbose:\n",
    "        print(f\"=== SALES ANALYSIS - {region} ===\")\n",
    "        print(f\"Total Sales: ${stats['total_sales']:,}\")\n",
    "        print(f\"Average Sale: ${stats['average_sales']:,.2f}\")\n",
    "        print(f\"Largest Sale: ${stats['max_sale']:,}\")\n",
    "        print(f\"Number of Sales: {stats['sales_count']}\")\n",
    "    \n",
    "    return stats\n",
    "\n",
    "# Test the function\n",
    "daily_sales = [1200, 850, 2100, 950, 1800, 3200, 750]\n",
    "stats = analyze_sales(daily_sales, \"North America\")\n",
    "print(\"\\nReturned statistics:\", stats)"
   ]

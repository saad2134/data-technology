    "## 4. Lambda Functions for Quick Operations"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Using lambda for quick calculations\n",
    "sales_data = [\n",
    "    {\"product\": \"Laptop\", \"price\": 999, \"units\": 45},\n",
    "    {\"product\": \"Mouse\", \"price\": 25, \"units\": 120},\n",
    "    {\"product\": \"Keyboard\", \"price\": 75, \"units\": 85}\n",
    "]\n",
    "\n",
    # Calculate revenue for each product using lambda\n",
    "revenues = list(map(lambda item: item[\"price\"] * item[\"units\"], sales_data))\n",
    "\n",
    # Filter high-revenue products using lambda\n",
    "high_revenue_products = list(filter(lambda item: item[\"price\"] * item[\"units\"] > 5000, sales_data))\n",
    "\n",
    "print(\"Revenues per product:\", revenues)\n",
    "print(\"High revenue products:\", high_revenue_products)\n",
    "\n",
    # Lambda for quick formatting\n",
    "format_currency = lambda amount: f\"${amount:,.2f}\"\n",
    "print(\"\\nFormatted revenues:\", [format_currency(rev) for rev in revenues])"
   ]

   "source": [
    "# Creating a business analytics module (in separate file normally)\n",
    "# This simulates what would be in analytics_utils.py\n",
    "\n",
    "def format_percentage(value, decimals=1):\n",
    "    \"\"\"Format a decimal as percentage\"\"\"\n",
    "    return f\"{value:.{decimals}f}%\"\n",
    "\n",
    "def calculate_metrics(values):\n",
    "    \"\"\"Calculate basic statistical metrics\"\"\"\n",
    "    return {\n",
    "        \"mean\": sum(values) / len(values),\n",
    "        \"max\": max(values),\n",
    "        \"min\": min(values),\n",
    "        \"range\": max(values) - min(values)\n",
    "    }\n",
    "\n",
    "def create_report(metrics, title=\"Business Report\"):\n",
    "    \"\"\"Create a formatted business report\"\"\"\n",
    "    report = f\"\"\"\n",
    "    === {title} ===\n",
    "    Average: ${metrics['mean']:,.2f}\n",
    "    Maximum: ${metrics['max']:,.2f}\n",
    "    Minimum: ${metrics['min']:,.2f}\n",
    "    Range: ${metrics['range']:,.2f}\n",
    "    \"\"\"\n",
    "    return report\n",
    "\n",
    "# Using our \"module\" functions\n",
    "sales = [1500, 2200, 1800, 3100, 1900]\n",
    "metrics = calculate_metrics(sales)\n",
    "report = create_report(metrics, \"Monthly Sales Analysis\")\n",
    "print(report)\n",
    "\n",
    "# Formatting example\n",
    "growth_rate = 0.1567\n",
    "print(f\"Growth rate: {format_percentage(growth_rate * 100)}\")"
   ]

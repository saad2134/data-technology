    "# Data cleaning and transformation functions\n",
    "def clean_sales_data(raw_sales):\n",
    "    \"\"\"Clean sales data by handling missing values and outliers\"\"\"\n",
    "    import numpy as np\n",
    "    \n",
    "    # Remove negative values and zeros\n",
    "    cleaned = [s for s in raw_sales if s > 0]\n",
    "    \n",
    "    # Handle missing values (represented as None)\n",
    "    cleaned = [s if s is not None else np.mean(cleaned) for s in cleaned]\n",
    "    \n",
    "    return cleaned\n",
    "\n",
    "def calculate_growth_metrics(current_period, previous_period):\n",
    "    \"\"\"Calculate growth rate and absolute growth\"\"\"\n",
    "    growth_amount = current_period - previous_period\n",
    "    growth_rate = (growth_amount / previous_period) * 100\n",
    "    \n",
    "    return {\n",
    "        \"growth_amount\": growth_amount,\n",
    "        \"growth_rate\": growth_rate,\n",
    "        \"direction\": \"increase\" if growth_amount > 0 else \"decrease\"\n",
    "    }\n",
    "\n",
    "# Using the data processing functions\n",
    "raw_data = [1200, -500, 1800, None, 2100, 0, 950]\n",
    "cleaned_data = clean_sales_data(raw_data)\n",
    "\n",
    "print(\"Raw data:\", raw_data)\n",
    "print(\"Cleaned data:\", cleaned_data)\n",
    "\n",
    "# Growth calculation\n",
    "q3_revenue = 450000\n",
    "q4_revenue = 520000\n",
    "growth = calculate_growth_metrics(q4_revenue, q3_revenue)\n",
    "\n",
    "print(f\"\\nQuarterly Growth: ${growth['growth_amount']:,} ({growth['growth_rate']:.1f}% {growth['direction']})\")"
   ]

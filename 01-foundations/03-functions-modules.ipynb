   "source": [
    "# Complete business analysis system using functions\n",
    "def load_sales_data():\n",
    "    \"\"\"Simulate loading sales data\"\"\"\n",
    "    return [\n",
    "        {\"product\": \"Laptop\", \"revenue\": 45000, \"units\": 45, \"region\": \"North\"},\n",
    "        {\"product\": \"Mouse\", \"revenue\": 3000, \"units\": 120, \"region\": \"South\"},\n",
    "        {\"product\": \"Keyboard\", \"revenue\": 6375, \"units\": 85, \"region\": \"North\"},\n",
    "        {\"product\": \"Monitor\", \"revenue\": 9000, \"units\": 30, \"region\": \"East\"},\n",
    "        {\"product\": \"Headphones\", \"revenue\": 13500, \"units\": 90, \"region\": \"West\"},\n",
    "    ]\n",
    "\n",
    "def analyze_product_performance(sales_data):\n",
    "    \"\"\"Analyze performance metrics for each product\"\"\"\n",
    "    analysis = {}\n",
    "    \n",
    "    for item in sales_data:\n",
    "        product = item[\"product\"]\n",
    "        price_per_unit = item[\"revenue\"] / item[\"units\"]\n",
    "        \n",
    "        analysis[product] = {\n",
    "            \"total_revenue\": item[\"revenue\"],\n",
    "            \"units_sold\": item[\"units\"],\n",
    "            \"average_price\": price_per_unit,\n",
    "            \"revenue_share\": 0  # Will calculate later\n",
    "        }\n",
    "    \n",
    "    # Calculate revenue share\n",
    "    total_revenue = sum(item[\"revenue\"] for item in sales_data)\n",
    "    for product in analysis:\n",
    "        analysis[product][\"revenue_share\"] = (analysis[product][\"total_revenue\"] / total_revenue) * 100\n",
    "    \n",
    "    return analysis, total_revenue\n",
    "\n",
    "def generate_performance_report(analysis, total_revenue):\n",
    "    \"\"\"Generate a formatted performance report\"\"\"\n",
    "    print(\"=== PRODUCT PERFORMANCE REPORT ===\")\n",
    "    print(f\"Total Company Revenue: ${total_revenue:,}\")\n",
    "    print(\"\\nProduct Breakdown:\")\n",
    "    \n",
    "    for product, metrics in analysis.items():\n",
    "        print(f\"\\n{product}:\")\n",
    "        print(f\"  Revenue: ${metrics['total_revenue']:,}\")\n",
    "        print(f\"  Units Sold: {metrics['units_sold']}\")\n",
    "        print(f\"  Average Price: ${metrics['average_price']:.2f}\")\n",
    "        print(f\"  Revenue Share: {metrics['revenue_share']:.1f}%\")\n",
    "\n",
    "def identify_top_performers(analysis, metric='total_revenue', top_n=3):\n",
    "    \"\"\"Identify top performing products\"\"\"\n",
    "    sorted_products = sorted(analysis.items(), key=lambda x: x[1][metric], reverse=True)\n",
    "    \n",
    "    print(f\"\\n=== TOP {top_n} PERFORMERS BY {metric.upper().replace('_', ' ')} ===\")\n",
    "    for i, (product, metrics) in enumerate(sorted_products[:top_n], 1):\n",
    "        value = metrics[metric]\n",
    "        if 'revenue' in metric:\n",
    "            print(f\"{i}. {product}: ${value:,}\")\n",
    "        else:\n",
    "            print(f\"{i}. {product}: {value}\")\n",
    "\n",
    "# Run the complete analysis\n",
    "sales_data = load_sales_data()\n",
    "product_analysis, total_revenue = analyze_product_performance(sales_data)\n",
    "generate_performance_report(product_analysis, total_revenue)\n",
    "identify_top_performers(product_analysis)\n",
    "identify_top_performers(product_analysis, 'units_sold', top_n=2)"
   ]
